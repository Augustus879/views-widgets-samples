<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.percentlayout.widget.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.android.databoundrecyclerview.MainActivity">

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_height="@dimen/title_height"
            android:text="@string/phone_list"
            app:layout_widthPercent="50%" />

        <TextView
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_height="@dimen/title_height"
            android:layout_gravity="end"
            android:text="@string/phone_info"
            app:layout_widthPercent="50%" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/phone_list"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_height"
            app:layoutManager="LinearLayoutManager"
            app:layout_widthPercent="50%" />

        <LinearLayout
            android:id="@+id/phone_info"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/title_height"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_widthPercent="50%"
            >

            <TextView
                android:id="@+id/user_name_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_user_name"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user_name"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/phone_mac_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/phone_mac"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/phone_mac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mac" android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/bind_date_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bind Time"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bind_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2024-04-01" android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

    </androidx.percentlayout.widget.PercentFrameLayout>
</layout>